				</TextBlock>
				<TextBlock Style="{StaticResource PlanStatisticValueStyle}" Visibility="{Binding LastParallelDegree, Converter={StaticResource ObjectToVisibilityConverter}}">
					<Run Text="DOP: " />
					<Run Text="{Binding LastParallelDegree}" />
