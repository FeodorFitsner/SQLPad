<UserControl x:Class="SqlPad.Oracle.ToolTips.ToolTipColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sqlPad="clr-namespace:SqlPad;assembly=SqlPad"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="240"
			 Padding="4">
    <StackPanel>
		<StackPanel.Resources>
			<sqlPad:DateTimeLabelConverter x:Key="DateTimeConverter" />
			<sqlPad:BooleanLabelConverter x:Key="BooleanConverter" />
			<sqlPad:NumericConverter x:Key="NumericConverter" />
		</StackPanel.Resources>
		<GroupBox BorderThickness="0">
			<GroupBox.Header>
				<TextBlock Text="Column Attributes" FontWeight="Bold"/>
			</GroupBox.Header>
			<Grid Margin="4">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="96"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" Grid.Column="0" Text="Owner: " />
				<TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Owner}" />
				<TextBlock Grid.Row="1" Grid.Column="0" Text="Name: " />
				<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Name}" />
				<TextBlock Grid.Row="2" Grid.Column="0" Text="Data type: " />
				<TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DataType}" />
				<TextBlock Grid.Row="3" Grid.Column="0" Text="Nullable: " />
				<TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Nullable, Converter={StaticResource BooleanConverter}}" />
				<TextBlock Grid.Row="4" Grid.Column="0" Text="Distinct values: " />
				<TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DistinctValueCount, Converter={StaticResource NumericConverter}}" />
				<TextBlock Grid.Row="5" Grid.Column="0" Text="Null values: " />
				<TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding NullValueCount, Converter={StaticResource NumericConverter}}" />
				<TextBlock Grid.Row="6" Grid.Column="0" Text="Sample size: " />
				<TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SampleSize, Converter={StaticResource NumericConverter}}" />
				<TextBlock Grid.Row="7" Grid.Column="0" Text="Average bytes: " />
				<TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding AverageValueSize, Converter={StaticResource NumericConverter}}" />
				<TextBlock Grid.Row="8" Grid.Column="0" Text="Last analyzed: " />
				<TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding LastAnalyzed, Converter={StaticResource DateTimeConverter}}" />
			</Grid>
		</GroupBox>

		<GroupBox BorderThickness="0" Visibility="{Binding HistogramVisibility}">
			<GroupBox.Header>
				<TextBlock Text="Histogram" FontWeight="Bold"/>
			</GroupBox.Header>
			<Border BorderThickness="1" BorderBrush="Black" Background="White" Margin="4">
				<Polygon Points="{Binding HistogramPoints}" Stretch="Fill" Fill="Black" Opacity="1" />
			</Border>
		</GroupBox>
	</StackPanel>
</UserControl>
