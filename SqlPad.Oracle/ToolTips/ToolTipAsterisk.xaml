<UserControl x:Class="SqlPad.Oracle.ToolTips.ToolTipAsterisk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toolTips="clr-namespace:SqlPad.Oracle.ToolTips"
             xmlns:sqlPad="clr-namespace:SqlPad;assembly=SqlPad"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="200">
	<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
		<ItemsControl x:Name="ItemsControl">
			<ItemsControl.Resources>
				<sqlPad:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />

				<DataTemplate x:Key="ColumnModelDataTemplate" DataType="toolTips:OracleColumnModel">
					<StackPanel Orientation="Horizontal">
						<TextBlock>
							<Run Text="{Binding Path=ColumnIndex, Mode=OneWay}"/><Run Text=". "/>
						</TextBlock>
						<TextBlock Visibility="{Binding Path=RowSourceName, Converter={StaticResource ObjectToVisibilityConverter}}">
							<Run Text="{Binding Path=RowSourceName, Mode=OneWay}"/><Run Text="."/>
						</TextBlock>
						<TextBlock Text="{Binding Path=Name}" />
						<TextBlock Text="{Binding Path=FullTypeName}" Margin="12, 0, 0, 0" />
					</StackPanel>
				</DataTemplate>
				<DataTemplate x:Key="SeparatorTemplate">
					<Separator />
				</DataTemplate>
			</ItemsControl.Resources>
		
			<ItemsControl.ItemTemplate>
				<DataTemplate DataType="toolTips:OracleColumnModel">
					<ContentControl Content="{Binding}">
						<ContentControl.Style>
							<Style TargetType="ContentControl">
								<Style.Triggers>
									<DataTrigger Binding="{Binding Path=IsSeparator}" Value="true">
										<Setter Property="ContentTemplate" Value="{StaticResource SeparatorTemplate}" />
									</DataTrigger>
									<DataTrigger Binding="{Binding Path=IsSeparator}" Value="false">
										<Setter Property="ContentTemplate" Value="{StaticResource ColumnModelDataTemplate}" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</ContentControl.Style>
					</ContentControl>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</ScrollViewer>
</UserControl>
