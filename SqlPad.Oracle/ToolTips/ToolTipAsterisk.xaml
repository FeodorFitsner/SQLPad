<UserControl x:Class="SqlPad.Oracle.ToolTips.ToolTipAsterisk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oracle="clr-namespace:SqlPad.Oracle"
             xmlns:toolTips="clr-namespace:SqlPad.Oracle.ToolTips"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="200">
	<ItemsControl x:Name="ItemsControl">
		<ItemsControl.Resources>
			<toolTips:SimpleColumnNameConverter x:Key="SimpleColumnNameConverter" />
		</ItemsControl.Resources>
		<ItemsControl.ItemTemplate>
			<DataTemplate DataType="oracle:OracleColumn">
				<TextBlock>
					<Run Text="{Binding Path=Name, Converter={StaticResource SimpleColumnNameConverter}, Mode=OneWay}" />
					<Run Text="{Binding Path=FullTypeName, Mode=OneWay}" />
				</TextBlock>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
