<Window x:Class="SqlPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:SqlPad"
        Title="SQL Pad 0.01 Alpha" Height="640" Width="960" Loaded="WindowLoadedHandler">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.CommandAddColumnAliases}"
                    Executed="AddColumnAliasesExecutedHandler" CanExecute="AddColumnAliasesCanExecuteHandler" />
        <CommandBinding Command="{x:Static local:MainWindow.CommandWrapAsCommonTableExpression}"
                    Executed="WrapAsCommonTableExpressionExecutedHandler" CanExecute="WrapAsCommonTableExpressionCanExecuteHandler" />
        <CommandBinding Command="{x:Static local:MainWindow.CommandToggleQuotedIdentifier}"
                    Executed="ToggleQuotedIdentifierExecutedHandler" CanExecute="ToggleQuotedIdentifierCanExecuteHandler" />
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="72" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="240" />
        </Grid.ColumnDefinitions>
        <avalonedit:TextEditor x:Name="Editor" FontFamily="Consolas" ShowLineNumbers="True" TextChanged="EditorTextChangedHandler" MouseHover="MouseHoverHandler" MouseHoverStopped="MouseHoverStoppedHandler">
            
        </avalonedit:TextEditor>
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TextBlockToken" TextWrapping="WrapWithOverflow" />

        <StackPanel Grid.Column="1" Grid.Row="0">
            <Button Content="_Add column aliases" Command="{x:Static local:MainWindow.CommandAddColumnAliases}" />
            <Button Content="_Wrap as common table expression" Command="{x:Static local:MainWindow.CommandWrapAsCommonTableExpression}" />
            <Button Content="W_rap as subquery" IsEnabled="False" />
            <Button Content="A_dd fully qualified names" IsEnabled="False" />
            <Button Content="E_xpand columns" IsEnabled="False" />
            <Button Content="Toggle quoted identifiers" Command="{x:Static local:MainWindow.CommandToggleQuotedIdentifier}" />
        </StackPanel>
    </Grid>
</Window>
